        <h1>Editar Seguro</h1>
    </head>
    <style>

h1{
  text-align: center;
  margin-top: 30px;
}
div > a:hover{
  color: white;
}

div > a{
  color: white;
}

table{
  text-align: justify;
}

tr.hide-table-padding td {
  padding: 0;
  margin: 0;
}

.expand-button {
	position: relative;
}

form > div{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
  margin-right: 25%;
  margin-left: 25%;
  }

</style>

<body>
    <form  action="/Seguro/Editar/<%=seguro.idSeguro%>" method="POST">
      <div class="form-group ">
        <label for="Asegurador">Asegurador</label>
        <select id="Asegurador" class="form-control" name="Asegurador" required> 
          <% for( let i = 0; i < info[1].length; i++ ) { %>
            <% if (seguro.NombreAsegurador == info[1][i].NombreAsegurador) { %>
                <option selected="selected"><%=info[1][i].NombreAsegurador%></option>
            <% } %>
            <% if (seguro.NombreAsegurador != info[1][i].NombreAsegurador) { %>
                <option><%=info[1][i].NombreAsegurador%></option>
            <% } %>
            
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="Intermediario">Intermediario</label>
        <input type="text" class="form-control" id="Intermediario" aria-describedby="Intermediario" placeholder="Intermediario" value="<%=seguro.intermediario%>" name="Intermediario"  maxlength="100">
    </div>
    <div class="form-group">
      <label for="Poliza">Poliza</label>
      <input type="text" class="form-control" id="Poliza" aria-describedby="Poliza" placeholder="Poliza" name="Poliza" value="<%=seguro.Poliza%>" maxlength="12" >
  </div>
  <div class="form-group">
    <label for="Precio">Precio</label>
    <input type="number" class="form-control" id="Precio" aria-describedby="Precio" placeholder="Precio del seguro" name="Precio" value="<%=seguro.Precio%>" step=".01">
</div>
      <div class="form-group ">
        <label for="Moneda">Moneda</label>
        <select id="Moneda" class="form-control" name="Moneda" required> 
          <% for( let i = 0; i < info[0].length; i++ ) { %>
            <% if (seguro.NombreMoneda == info[0][i].NombreMoneda) { %>
                <option selected="selected"><%=info[0][i].NombreMoneda%></option>
            <% } %>
            <% if (seguro.NombreMoneda != info[0][i].NombreMoneda) { %>
                <option><%=info[0][i].NombreMoneda%></option>
            <% } %>
          <% } %>
        </select>
      </div>
      <div class="form-group ">
        <label for="TipoCliente">Tipo Cliente</label>
        <select id="TipoCliente" class="form-control" name="TipoCliente" required> 
          <% for( let i = 0; i < info[2].length; i++ ) { %>
            <% if (seguro.NombreTipoCliente == info[2][i].NombreTipoCliente) { %>
                <option selected="selected"><%=info[2][i].NombreTipoCliente%></option>
            <% } %>
            <% if (seguro.NombreTipoCliente != info[2][i].NombreTipoCliente) { %>
                <option><%=info[2][i].NombreTipoCliente%></option>
            <% } %>
          <% } %>
        </select>
      </div>

      <% if (seguro.NombreTipoSeguro == "Vida Colectiva") { %>
        <div class="form-group">
        <label for="EdadPromedio">Edad Promedio</label>
        <input type="number" class="form-control" id="EdadPromedio" aria-describedby="EdadPromedio" placeholder="Edad Promedio" name="EdadPromedio" value="<%=seguro.EdadPromedio%>" required>
    </div>
    <div class="form-group">
      <label for="CantidadAsegurados">Cantidad de Asegurados</label>
      <input type="number" class="form-control" id="CantidadAsegurados" aria-describedby="CantidadAsegurados" placeholder="Cantidad de Asegurados" name="CantidadAsegurados" value="<%=seguro.CantidadAsegurados%>" required>
    </div>
      <% } %>

      <% if (seguro.NombreTipoSeguro == "Vida") { %>
        <div class="form-group">
            <label for="Profesion">Profesión</label>
            <select id="Profesion" class="form-control" name="Profesion" required> 
              <% for( let i = 0; i < info[5].length; i++ ) { %>
                <% if (seguro.NombreProfesion == info[5][i].NombreProfesion) { %>
                    <option selected="selected"><%=info[5][i].NombreProfesion%></option>
                <% } %>
                <% if (seguro.NombreProfesion != info[5][i].NombreProfesion) { %>
                    <option><%=info[5][i].NombreProfesion%></option>
                <% } %>
              <% } %>
            </select>
        </div>
        <div class="form-group">
          <label for="RazonCompra">Razon Compra</label>
          <input type="text" class="form-control" id="RazonCompra" aria-describedby="RazonCompra" placeholder="RazonCompra" name="RazonCompra" value="<%=seguro.RazonCompra%>" maxlength="12" >
        </div>
      <% } %>




      <% if (seguro.NombreTipoSeguro == "Medio Transporte") { %>
        <div class="form-group">
            <label for="TipoTransporte">Tipo Transporte</label>
            <select id="TipoTransporte" class="form-control" name="TipoTransporte" required> 
              <% for( let i = 0; i < info[7].length; i++ ) { %>
                <% if (seguro.NombreTipoTransporte == info[7][i].NombreTipoTransporte) { %>
                    <option selected="selected"><%=info[7][i].NombreTipoTransporte%></option>
                <% } %>
                <% if (seguro.NombreTipoTransporte != info[7][i].NombreTipoTransporte) { %>
                    <option><%=info[7][i].NombreTipoTransporte%></option>
                <% } %>
              <% } %>
            </select>
        </div>
      <div class="form-group">
        <label for="Modelo">Modelo</label>
        <select id="Modelo" class="form-control" name="Modelo" required> 
          <% for( let i = 0; i < info[6].length; i++ ) { %>
            <% if (seguro.NombreModelo == info[6][i].NombreModelo) { %>
                <option selected="selected"><%=info[6][i].NombreModelo + ", " + info[6][i].NombreMarca%></option>
            <% } %>
            <% if (seguro.NombreAsegurador != info[6][i].NombreModelo) { %>
                <option><%=info[6][i].NombreModelo + ", " + info[6][i].NombreMarca%></option>
            <% } %>

          <% } %>
        </select>
    </div>
      <div class="form-group">
        <label for="Matricula">Matricula</label>
        <input type="number" class="form-control" id="Matricula" aria-describedby="Matricula" placeholder="Matricula" name="Matricula" value="<%=seguro.Matricula%>" maxlength="12" >
      </div>
      <div class="form-group">
        <label for="Año">Año</label>
        <input type="number" class="form-control" id="Año" aria-describedby="Año" placeholder="Año" name="Año" value="<%=seguro.Año%>" maxlength="12" >
      </div>
      <% } %>

      <% if (seguro.NombreTipoSeguro == "Salud") { %>
      <div class="form-group">
        <label for="Plan">Plan</label>
        <select id="Plan" class="form-control" name="Plan" required> 
          <% for( let i = 0; i < info[3].length; i++ ) { %>
            <% if (seguro.NombrePlan == info[3][i].NombrePlan) { %>
                <option selected="selected"><%=info[3][i].NombrePlan%></option>
            <% } %>
            <% if (seguro.NombrePlan != info[3][i].NombrePlan) { %>
                <option><%=info[3][i].NombrePlan%></option>
            <% } %>

          <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="Parentesco">Parentesco</label>
        <input type="text" class="form-control" id="Parentesco" aria-describedby="Parentesco" placeholder="Parentesco" name="Parentesco" value="<%=seguro.Parentesco%>" maxlength="12" >
      </div>
      <% } %>


    <% if (seguro.NombreTipoSeguro == "Incendio") { %>
      <div class="form-group ">
        <label for="TipoIncendio">Tipo de Incendio</label>
        <select id="TipoIncendio" class="form-control" name="TipoIncendio" required> 
          <% for( let i = 0; i < info[4].length; i++ ) { %>
            <% if (seguro.Descripcion == info[4][i].Descripcion) { %>
                <option selected="selected"><%=info[4][i].Descripcion%></option>
            <% } %>
            <% if (seguro.Descripcion != info[4][i].Descripcion) { %>
                <option><%=info[4][i].Descripcion%></option>
            <% } %>

          <% } %>
        </select>
      </div>


      <% } %>

      <div class="form-group">
        <label for="FechaPago">Fecha de Pago</label>
        <input type='date' class="form-control" id='FechaPago' name="FechaPago" value="<%=seguro.FechaPago%>" placeholder="Fecha de pago"/>
     </div>
     <div class="form-group">
      <label for="FechaVencimiento">Fecha de Vencimiento</label>
      <input type='date' class="form-control" id='FechaVencimiento' name="FechaVencimiento" value="<%=seguro.FechaVencimiento%>" placeholder="Fecha de Vencimiento"/>
   </div>

          <div class="form-group">
          <button type="submit" class="btn btn-primary" id="Registrarse">Guardar</button>
        </div>
      </form>
 
</body>

 </html>
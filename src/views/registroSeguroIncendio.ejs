            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" aria-describedby="Nombre" placeholder="Nombre" maxlength="20" name="Nombre" required>
        </div>
        <div class="form-group ">
            <label for="inputState">Aseguradores</label>
            <select id="inputState" class="form-control" required> 

              <option>Seleccione uno...</option>
              <% for( let i = 0; i < info[1].length; i++ ) { %>
                <option><%=info[1][i].NombreAsegurador%></option>
              <% } %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary" id="Registrarse">Registrarse</button>
          <a href="/login">Login</a>
          </form>


 
</body>


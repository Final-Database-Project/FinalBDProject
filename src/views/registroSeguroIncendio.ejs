        <h1>Registrar Seguro de Incendio</h1>
    </head>
    <style>

h1{
  text-align: center;
  margin-top: 30px;
}
div > a:hover{
  color: white;
}

div > a{
  color: white;
}

table{
  text-align: justify;
}

tr.hide-table-padding td {
  padding: 0;
  margin: 0;
}

.expand-button {
	position: relative;
}

form > div{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
  margin-right: 25%;
  margin-left: 25%;
  }

</style>

<body>
    <form  action="/Registrar/Seguro/Incendio" method="POST">
      <div class="form-group ">
        <label for="Asegurador">Asegurador</label>
        <select id="Asegurador" class="form-control" name="Asegurador" required> 
          <option>Seleccione uno...</option>
          <% for( let i = 0; i < info[1].length; i++ ) { %>
            <option><%=info[1][i].NombreAsegurador%></option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="Intermediario">Intermediario</label>
        <input type="text" class="form-control" id="Intermediario" aria-describedby="Intermediario" placeholder="Intermediario" name="Intermediario"  maxlength="100">
    </div>
    <div class="form-group">
      <label for="Poliza">Poliza</label>
      <input type="text" class="form-control" id="Poliza" aria-describedby="Poliza" placeholder="Poliza" name="Poliza" maxlength="12" >
  </div>
  <div class="form-group">
    <label for="Precio">Precio</label>
    <input type="number" class="form-control" id="Precio" aria-describedby="Precio" placeholder="Precio del seguro" name="Precio" step=".01">
</div>
      <div class="form-group ">
        <label for="Moneda">Moneda</label>
        <select id="Moneda" class="form-control" name="Moneda" required> 
          <option>Seleccione uno...</option>
          <% for( let i = 0; i < info[0].length; i++ ) { %>
            <option><%=info[0][i].NombreMoneda%></option>
          <% } %>
        </select>
      </div>
      <div class="form-group ">
        <label for="TipoCliente">Tipo Cliente</label>
        <select id="TipoCliente" class="form-control" name="TipoCliente" required> 
          <option>Seleccione uno...</option>
          <% for( let i = 0; i < info[2].length; i++ ) { %>
            <option><%=info[2][i].NombreTipoCliente%></option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="TipoIncendio">Tipo de Incendio</label>
        <input type="text" class="form-control" id="TipoIncendio" aria-describedby="TipoIncendio" placeholder="Tipo de Incendio" maxlength="50" name="TipoIncendio" >
    </div>
      <div class="form-group">
        <label for="FechaPago">Fecha de Pago</label>
        <input type='date' class="form-control" id='FechaPago' name="FechaPago" placeholder="Fecha de pago"/>
     </div>
     <div class="form-group">
      <label for="FechaVencimiento">Fecha de Vencimiento</label>
      <input type='date' class="form-control" id='FechaVencimiento' name="FechaVencimiento" placeholder="Fecha de Vencimiento"/>
   </div>

          <div class="form-group">
          <button type="submit" class="btn btn-primary" id="Registrarse">Registrar Seguro</button>
        </div>
      </form>
 
</body>
 </html>